<div class="pull-left text">{{appstr.quantity}}:</div>

<div class="pull-right quantity-control">
  <a href="#" class="fa fa-minus-circle fa-2x btn-icon" aria-role="button" aria-label="Decrement quantity" {{action "decrement"}}></a>
  <output class="text value" aria-label="Number of quantity">{{quantity}}</output>
  <a href="#" class="fa fa-plus-circle fa-2x btn-icon" aria-role="button" aria-label="Increment quantity"  {{action "increment"}}></a>
</div>
